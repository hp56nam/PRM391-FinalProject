<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".fragments.DonateFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/paypalTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Pay as much as you can ^^" />

    <EditText
        android:id="@+id/edtMount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/paypalTitle"
        android:ems="10"
        android:hint="Enter mount"
        android:inputType="number" />

    <Button
        android:id="@+id/btnPayNow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtMount"
        android:text="Pay now" />


</RelativeLayout>